        BoxCopy:
            id: box_cop
            pos_hint: {"x":0.05, "y":0.55}
            size_hint: 0.2, 0.06

        BoxPlain:
            id: box_plain
            pos_hint: {"x":0.05, "y":0.65}
            size_hint: 0.2, 0.03
        
        BoxHeight:
            id: box_height
